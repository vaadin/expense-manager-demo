{
  "entrypoint": "index.html",
  "shell": "src/expense-app.html",
  "fragments": [
    "src/login-page.html",
    "src/overview-page.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "manifest.json"
  ],
  "builds": [
    {
      "name": "es5-bundled",
      "preset": "es5-bundled",
      "basePath": true
    },
    {
      "name": "es6-bundled",
      "preset": "es6-bundled",
      "basePath": true,
      "browserCapabilities": [
        "es2015"
      ]
    },
    {
      "name": "es6-unbundled",
      "preset": "es6-unbundled",
      "basePath": true,
      "browserCapabilities": [
        "es2015",
        "push"
      ]
    }
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}
